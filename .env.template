# =================================================================
# AUTONOMOUS ENGINEERING INTELLIGENCE PLATFORM - ENVIRONMENT CONFIG
# =================================================================

# App
APP_ENV=dev
APP_NAME=autonomous-engineering-platform
API_HOST=0.0.0.0
API_PORT=8000
REALTIME_PORT=8001
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
# Option A (default): individual components â€” the backend constructs the URL automatically
DB_HOST=localhost
DB_PORT=5432
DB_USER=mentor
DB_PASSWORD=mentor
DB_NAME=mentor
# Option B: set DATABASE_URL directly to override the components above
# DATABASE_URL=postgresql+psycopg://mentor:mentor@localhost:5432/mentor

# Redis / Queue
REDIS_URL=redis://localhost:6379/0

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Claude API (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Vector DB
VECTOR_DB_PATH=./data/vector_store

# Vector Search Configuration (PR-16: pgvector/FAISS + Hybrid BM25)
VECTOR_BACKEND=pgvector  # Options: pgvector | faiss | json
EMBED_DIM=1536  # Embedding dimension (OpenAI ada-002: 1536)
PGVECTOR_INDEX=hnsw  # Options: hnsw | ivfflat
BM25_ENABLED=true  # Enable BM25/FTS hybrid ranking
FAISS_INDEX_PATH=./data/faiss/index.faiss  # FAISS index file path (if using FAISS)

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# External Integrations
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

JIRA_URL=https://your-company.atlassian.net
JIRA_USER=your_jira_email@company.com
JIRA_TOKEN=your_jira_api_token

# Autonomous Coding Configuration
ENABLE_AUTONOMOUS_CODING=false  # Set to true when ready for autonomous features
MAX_AUTONOMOUS_FILES_PER_PR=5
REQUIRE_HUMAN_APPROVAL=true

# Memory and Context
MAX_CONTEXT_WINDOW=8000
MEMORY_RETENTION_DAYS=365
ENABLE_TEAM_MEMORY=true

# Monitoring and Analytics
ENABLE_ANALYTICS=true
SENTRY_DSN=your_sentry_dsn_here

# Development Settings
ENABLE_CORS=true
ALLOW_ORIGINS=http://localhost:3000,http://localhost:3001
