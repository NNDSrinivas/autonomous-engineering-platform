# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
#
# IMPORTANT: Replace all placeholder values before deploying to production!
# - Generate secure random secrets: python -c "import secrets; print(secrets.token_urlsafe(32))"
# - Use production database credentials
# - Configure proper CORS origins
# - Set up Redis for session management
#
# ============================================================================

# LLM Provider API Keys
OPENAI_API_KEY=your-production-openai-key-here
ANTHROPIC_API_KEY=your-production-anthropic-key-here
DEFAULT_LLM_PROVIDER=openai

# Security Keys (GENERATE NEW SECURE RANDOM KEYS!)
SECRET_KEY=REPLACE_WITH_SECURE_RANDOM_KEY_32_BYTES
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_JWT_SECRET
AEP_JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_AEP_JWT_SECRET

# JWT Configuration
JWT_ENABLED=true
VSCODE_AUTH_REQUIRED=true
ALLOW_DEV_AUTH_BYPASS=false
JWT_JWKS_URL=https://auth.navralabs.com/.well-known/jwks.json
JWT_ISSUER=https://auth.navralabs.com/
JWT_AUDIENCE=https://api.navralabs.com
JWT_JWKS_CACHE_TTL=300

# Platform Configuration
DEBUG=False
LOG_LEVEL=WARNING
ENVIRONMENT=production

# OAuth Device Code
OAUTH_DEVICE_USE_IN_MEMORY_STORE=false
OAUTH_DEVICE_AUTO_APPROVE=false

# Database (Use production PostgreSQL!)
DATABASE_URL=postgresql+psycopg://prod_user:SECURE_PASSWORD@prod-db:5432/aep_prod
VECTOR_DB_PATH=/var/lib/aep/vector_store

# Redis (REQUIRED)
REDIS_URL=redis://prod-redis:6379/0

# API Configuration
API_PORT=8787
API_V1_PREFIX=/api

# CORS - Only production domains!
CORS_ORIGINS=https://aep.navralabs.com,https://auth.navralabs.com
ALLOW_DEV_CORS=false
ALLOW_VSCODE_WEBVIEW=true

# Features
ENABLE_REAL_TIME=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_ANALYTICS=true
ENABLE_AI_ASSISTANCE=true

# Auth0
AUTH0_DOMAIN=auth.navralabs.com
AUTH0_CLIENT_ID=production-client-id
AUTH0_CLIENT_SECRET=production-client-secret
AUTH0_AUDIENCE=https://api.navralabs.com
AUTH0_ALGORITHM=RS256

# Organization
X_ORG_ID=production-org-id

# Webhook Secrets (GENERATE NEW!)
JIRA_WEBHOOK_SECRET=REPLACE_WITH_SECURE_RANDOM_KEY
GITHUB_WEBHOOK_SECRET=REPLACE_WITH_SECURE_RANDOM_KEY
SLACK_SIGNING_SECRET=REPLACE_WITH_SECURE_RANDOM_KEY
TEAMS_WEBHOOK_SECRET=REPLACE_WITH_SECURE_RANDOM_KEY
DOCS_WEBHOOK_SECRET=REPLACE_WITH_SECURE_RANDOM_KEY
CI_WEBHOOK_SECRET=REPLACE_WITH_SECURE_RANDOM_KEY
