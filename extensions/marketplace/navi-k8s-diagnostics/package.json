{
    "name": "navi-k8s-diagnostics",
    "version": "1.0.0",
    "description": "NAVI Kubernetes Diagnostics Extension - Staff+ SRE intelligence for live infrastructure",
    "main": "dist/index.js",
    "types": "dist/types.d.ts",
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "build:watch": "tsc --project tsconfig.json --watch",
        "test": "jest --config jest.config.js",
        "test:watch": "jest --config jest.config.js --watch",
        "test:coverage": "jest --config jest.config.js --coverage",
        "lint": "eslint src/**/*.ts --fix",
        "clean": "rm -rf dist/",
        "package": "npm run build && npm run test && npm run create-bundle",
        "create-bundle": "node scripts/create-bundle.js",
        "verify-bundle": "node scripts/verify-bundle.js"
    },
    "keywords": [
        "navi",
        "kubernetes",
        "diagnostics",
        "sre",
        "devops",
        "infrastructure",
        "monitoring"
    ],
    "author": "NAVI Team",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.5",
        "@types/node": "^20.6.0",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "eslint": "^8.49.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "crypto": "^1.0.1"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/navi/autonomous-engineering-platform"
    },
    "naviExtension": {
        "id": "navi-k8s-diagnostics",
        "version": "1.0.0",
        "trustLevel": "CORE",
        "permissions": [
            "K8S_READ",
            "K8S_LOGS",
            "REPO_READ",
            "REQUEST_APPROVAL",
            "PROPOSE_ACTIONS"
        ],
        "manifestPath": "./manifest.json",
        "entryPoint": "./dist/index.js",
        "typesPath": "./dist/types.d.ts"
    }
}