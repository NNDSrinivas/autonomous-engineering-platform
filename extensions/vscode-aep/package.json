{
  "name": "aep-professional",
  "displayName": "AEP Professional",
  "publisher": "navralabs",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "icon": "media/aep-icon-256.png",
  "contributes": {
    "configuration": {
      "title": "NAVI Assistant",
      "properties": {
        "aep.navi.backendUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8787/api/navi/chat",
          "description": "Backend URL for NAVI Assistant API calls (full endpoint URL including /api/navi/chat)"
        }
      }
    },
    "commands": [
      {
        "command": "aep.openNavi",
        "title": "AEP: Open NAVI Assistant"
      },
      {
        "command": "aep.attachSelection",
        "title": "NAVI: Attach Selected Code"
      },
      {
        "command": "aep.attachCurrentFile",
        "title": "NAVI: Attach Current File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aep",
          "title": "AEP",
          "icon": "media/aep-activitybar.svg"
        }
      ]
    },
    "views": {
      "aep": [
        {
          "id": "aep.chatView",
          "name": "NAVI Assistant",
          "type": "webview",
          "icon": "media/mascot-navi-fox.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "demo-backend": "node demo-backend.js"
  },
  "dependencies": {
    "@types/diff": "^8.0.0",
    "diff": "^8.0.2"
  },
  "devDependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "eslint": "^9.0.0",
    "typescript": "^5.4.0"
  }
}