import * as vscode from 'vscode';
import { getUri } from '../webview/getUri';
import { ModernChatInterface } from './ModernChatInterface';

export class AgentHomeViewProvider implements vscode.WebviewViewProvider {
    public static readonly viewId = 'aep.home';
    private _view?: vscode.WebviewView;
    private _isAuthenticated = false;

    constructor(private readonly ctx: vscode.ExtensionContext) { }

    public refresh() {
        if (this._view) {
            this._view.webview.html = this.getHtmlContent(this._view.webview);
        }
    }

    resolveWebviewView(view: vscode.WebviewView) {
        this._view = view;
        view.webview.options = {
            enableScripts: true,
            localResourceRoots: [this.ctx.extensionUri]
        };

        // Check if user is already authenticated
        const token = this.ctx.globalState.get<string>('aep.token');
        this._isAuthenticated = !!token;
        console.log('AEP: View initialized, authenticated:', this._isAuthenticated, 'token exists:', !!token);

        view.webview.html = this.getHtmlContent(view.webview);

        // Initial load is sufficient - no need for forced refresh

        view.webview.onDidReceiveMessage(async (message) => {
            try {
                console.log('AEP: Received message:', message);

                switch (message.command) {
                    case 'signin':
                        await this.handleSignIn();
                        break;
                    case 'signout':
                        await this.handleSignOut();
                        break;
                    case 'settings':
                        await this.handleSettings();
                        break;
                    case 'sendMessage':
                        await this.handleChatMessage(message.data.message, message.data.sessionActive, message.data.autoContext);
                        break;
                    case 'newSession':
                        await this.handleNewSession();
                        break;
                    case 'toggleContext':
                        await this.handleToggleContext(message.data.enabled);
                        break;
                    case 'messageAction':
                        await this.handleMessageAction(message.data);
                        break;
                    case 'sessionStarted':
                        vscode.window.showInformationMessage('üöÄ AEP: AI Engineering session started!');
                        break;
                    case 'openDocs':
                        await vscode.env.openExternal(vscode.Uri.parse('https://github.com/NNDSrinivas/autonomous-engineering-platform'));
                        break;
                    default:
                        console.log(`AEP: Unknown command - ${message.command}`);
                }
            } catch (error) {
                console.error('AEP Error:', error);
                const errorMessage = error instanceof Error ? error.message : 'Unknown error occurred';
                this._view?.webview.postMessage({
                    command: 'error',
                    data: { error: errorMessage }
                });
            }
        });
    }

    private async handleSignIn() {
        try {
            vscode.window.showInformationMessage('üîê AEP: Authenticating with Auth0...');

            // Simulate auth process
            await new Promise(resolve => setTimeout(resolve, 1500));

            // Set authenticated state FIRST
            this._isAuthenticated = true;
            await vscode.commands.executeCommand('setContext', 'aep.authenticated', true);

            // Store mock profile
            await this.ctx.globalState.update('aep.token', 'auth_token_' + Date.now());
            await this.ctx.globalState.update('aep.profile', {
                name: 'Developer User',
                email: 'user@navralabs.com',
                organization: 'Navra Labs'
            });

            vscode.window.showInformationMessage('‚úÖ AEP: Successfully authenticated!');
            console.log('AEP: Authentication state set to:', this._isAuthenticated);
            this.refresh();
        } catch (error) {
            vscode.window.showErrorMessage('‚ùå AEP: Authentication failed');
        }
    }

    private async handleSignOut() {
        this._isAuthenticated = false;
        await vscode.commands.executeCommand('setContext', 'aep.authenticated', false);
        await this.ctx.globalState.update('aep.token', undefined);
        await this.ctx.globalState.update('aep.profile', undefined);
        vscode.window.showInformationMessage('üëã AEP: Signed out successfully');
        this.refresh();
    }

    private async handleSettings() {
        try {
            // Show extension-specific settings
            await vscode.commands.executeCommand('workbench.action.openSettings', '@ext:navralabs-dev.aep-professional-dev');
            vscode.window.showInformationMessage('‚öôÔ∏è AEP: Opening extension settings...');
        } catch (error) {
            // Fallback to general settings
            await vscode.commands.executeCommand('workbench.action.openSettings');
            vscode.window.showInformationMessage('‚öôÔ∏è AEP: Settings opened');
        }
    }

    private async handleChatMessage(message: string, sessionActive: boolean, autoContext?: boolean) {
        try {
            console.log('AEP: Processing chat message:', message);

            // Simulate thinking delay
            await new Promise(resolve => setTimeout(resolve, 1000 + Math.random() * 2000));

            // Generate a response based on the message
            const responseData = this.generateAIResponse(message, autoContext);

            // Send response back to webview
            this._view?.webview.postMessage({
                command: 'addMessage',
                data: {
                    content: responseData.content,
                    time: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }),
                    actions: responseData.actions
                }
            });

        } catch (error) {
            console.error('AEP: Error processing chat message:', error);
            this._view?.webview.postMessage({
                command: 'error',
                data: { error: 'Failed to process your message. Please try again.' }
            });
        }
    }

    private generateAIResponse(message: string, autoContext?: boolean): { content: string, actions?: any[] } {
        const lowerMessage = message.toLowerCase();

        // Enhanced response logic with actions
        if (lowerMessage.includes('hello') || lowerMessage.includes('hi')) {
            return {
                content: "Hello! I'm AEP, your AI engineering assistant. I can help you with code reviews, debugging, architecture decisions, and development workflows. What would you like to work on?",
                actions: [
                    { type: 'copy', label: 'Copy', content: "Hello! I'm AEP, your AI engineering assistant." }
                ]
            };
        }

        if (lowerMessage.includes('code review') || lowerMessage.includes('review')) {
            return {
                content: "I'd be happy to help with code reviews! Please share the code you'd like me to review, and I'll analyze it for:\n\n‚Ä¢ Code quality and best practices\n‚Ä¢ Security vulnerabilities\n‚Ä¢ Performance optimizations\n‚Ä¢ Architecture improvements\n‚Ä¢ Documentation suggestions\n\nWould you like me to review your current file?",
                actions: [
                    { type: 'approve', label: 'Review Current File' },
                    { type: 'copy', label: 'Copy Guidelines' }
                ]
            };
        }

        if (lowerMessage.includes('debug') || lowerMessage.includes('error') || lowerMessage.includes('bug')) {
            return {
                content: "Let's debug this together! Please share:\n\n‚Ä¢ The error message or unexpected behavior\n‚Ä¢ The relevant code snippet\n‚Ä¢ Steps to reproduce the issue\n‚Ä¢ Expected vs actual results\n\nI'll help identify the root cause and suggest solutions.",
                actions: [
                    { type: 'approve', label: 'Analyze Current File' },
                    { type: 'copy', label: 'Copy Debug Checklist' }
                ]
            };
        }

        if (lowerMessage.includes('test') || lowerMessage.includes('testing')) {
            return {
                content: "Testing is crucial for reliable software! I can help you with:\n\n‚Ä¢ Unit test strategies\n‚Ä¢ Integration testing approaches\n‚Ä¢ Test-driven development (TDD)\n‚Ä¢ Mocking and test fixtures\n‚Ä¢ Code coverage analysis\n\nWhat type of testing support do you need?",
                actions: [
                    { type: 'approve', label: 'Generate Tests' },
                    { type: 'copy', label: 'Copy Test Template' }
                ]
            };
        }

        if (lowerMessage.includes('architecture') || lowerMessage.includes('design')) {
            return {
                content: "Great question about software architecture! I can help with:\n\n‚Ä¢ System design patterns\n‚Ä¢ Microservices vs monolithic architectures\n‚Ä¢ Database design decisions\n‚Ä¢ API design best practices\n‚Ä¢ Scalability considerations\n\nTell me more about your project requirements.",
                actions: [
                    { type: 'approve', label: 'Analyze Project Structure' },
                    { type: 'copy', label: 'Copy Architecture Guidelines' }
                ]
            };
        }

        if (lowerMessage.includes('performance') || lowerMessage.includes('optimize')) {
            return {
                content: "Performance optimization is key to great user experience! I can help analyze:\n\n‚Ä¢ Algorithm complexity\n‚Ä¢ Database query optimization\n‚Ä¢ Memory usage patterns\n‚Ä¢ Caching strategies\n‚Ä¢ Profiling and benchmarking\n\nShare your performance concerns and I'll provide specific recommendations.",
                actions: [
                    { type: 'approve', label: 'Analyze Performance' },
                    { type: 'copy', label: 'Copy Optimization Tips' }
                ]
            };
        }

        if (lowerMessage.includes('deploy') || lowerMessage.includes('deployment') || lowerMessage.includes('ci/cd')) {
            return {
                content: "Deployment and CI/CD are essential for modern development! I can assist with:\n\n‚Ä¢ CI/CD pipeline setup\n‚Ä¢ Containerization strategies\n‚Ä¢ Infrastructure as Code\n‚Ä¢ Deployment environments\n‚Ä¢ Monitoring and logging\n\nWhat's your current deployment setup?",
                actions: [
                    { type: 'approve', label: 'Create Deployment Config' },
                    { type: 'copy', label: 'Copy CI/CD Template' }
                ]
            };
        }

        // Enhanced default response with code examples
        const hasCodeContext = autoContext && vscode.window.activeTextEditor;
        const contextMsg = hasCodeContext ? " I can see you're working on code - would you like me to analyze it?" : "";

        return {
            content: `I understand you're asking about "${message}". As your AI engineering assistant, I can help with various development tasks including:\n\n‚Ä¢ Code reviews and quality analysis\n‚Ä¢ Debugging and troubleshooting\n‚Ä¢ Architecture and design decisions\n‚Ä¢ Testing strategies\n‚Ä¢ Performance optimization\n‚Ä¢ DevOps and deployment\n\n${contextMsg}\n\nCould you provide more specific details about what you'd like help with?`,
            actions: [
                { type: 'approve', label: 'Analyze Current Context' },
                { type: 'copy', label: 'Copy Response' },
                { type: 'reject', label: 'Start Over' }
            ]
        };
    }

    private async handleNewSession() {
        try {
            console.log('AEP: Starting new session');
            // Clear any session state
            vscode.window.showInformationMessage('‚ú® AEP: New session started!');

            // Notify webview that session was started
            this._view?.webview.postMessage({
                command: 'sessionStarted'
            });
        } catch (error) {
            console.error('AEP: Error starting new session:', error);
            this._view?.webview.postMessage({
                command: 'error',
                data: { error: 'Failed to start new session. Please try again.' }
            });
        }
    }

    private async handleToggleContext(enabled: boolean) {
        try {
            console.log('AEP: Toggling auto context to:', enabled);

            // Store the preference
            await this.ctx.globalState.update('aep.autoContext', enabled);

            const message = enabled ?
                'üîó AEP: Auto context enabled - I\'ll include relevant files in conversations' :
                'üîó AEP: Auto context disabled - You\'ll need to manually add context';

            vscode.window.showInformationMessage(message);
        } catch (error) {
            console.error('AEP: Error toggling context:', error);
        }
    }

    private async handleMessageAction(action: any) {
        try {
            console.log('AEP: Handling message action:', action);

            switch (action.type) {
                case 'approve':
                    vscode.window.showInformationMessage('‚úÖ AEP: Action approved');
                    break;
                case 'reject':
                    vscode.window.showInformationMessage('‚ùå AEP: Action rejected');
                    break;
                case 'copy':
                    if (action.content) {
                        await vscode.env.clipboard.writeText(action.content);
                        vscode.window.showInformationMessage('üìã AEP: Copied to clipboard');
                    }
                    break;
                case 'apply':
                    vscode.window.showInformationMessage('üîß AEP: Applying changes...');
                    // TODO: Implement code application logic
                    break;
                default:
                    console.log('AEP: Unknown action type:', action.type);
            }
        } catch (error) {
            console.error('AEP: Error handling message action:', error);
            vscode.window.showErrorMessage('‚ùå AEP: Failed to handle action');
        }
    }

    private getHtmlContent(webview: vscode.Webview): string {
        const profile = this.ctx.globalState.get<any>('aep.profile');

        console.log('AEP: getHtmlContent called, authenticated:', this._isAuthenticated);

        if (!this._isAuthenticated) {
            console.log('AEP: Returning unauthenticated HTML');
            return this.getUnauthenticatedHtml(webview);
        }

        console.log('AEP: Returning chat interface HTML');
        return ModernChatInterface.getHTML(webview, profile);
    }

