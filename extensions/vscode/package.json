{
  "name": "aep-autonomous-agent",
  "displayName": "AEP Autonomous Engineering Agent",
  "description": "AI-powered development agent with enterprise intelligence",
  "publisher": "autonomous-engineering-platform",
  "version": "1.0.0-rc1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "AI",
    "Machine Learning", 
    "Other"
  ],
  "keywords": [
    "ai",
    "autonomous",
    "jira",
    "confluence", 
    "enterprise",
    "coding",
    "assistant"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/autonomous-engineering-platform.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "aep.openAgent",
        "title": "Open Agent Panel", 
        "category": "AEP",
        "icon": "$(robot)"
      },
      {
        "command": "aep.openChat",
        "title": "Open Chat",
        "category": "AEP", 
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aep.morningBrief",
        "title": "Morning Brief",
        "category": "AEP",
        "icon": "$(sun)"
      },
      {
        "command": "aep.pickJiraTask",
        "title": "Pick Jira Task",
        "category": "AEP", 
        "icon": "$(issues)"
      },
      {
        "command": "aep.planAndAct",
        "title": "Plan & Act",
        "category": "AEP",
        "icon": "$(play)"
      },
      {
        "command": "aep.showPlan", 
        "title": "Show Current Plan",
        "category": "AEP",
        "icon": "$(list-tree)"
      },
      {
        "command": "aep.authenticate",
        "title": "Authenticate",
        "category": "AEP",
        "icon": "$(key)"
      }
    ],
    "views": {
      "aep-container": [
        {
          "id": "aep.agentView",
          "name": "Agent",
          "when": "aep.authenticated",
          "icon": "$(robot)"
        },
        {
          "id": "aep.planView", 
          "name": "Plan & Act",
          "when": "aep.authenticated",
          "icon": "$(list-tree)"
        },
        {
          "id": "aep.contextView",
          "name": "Context",
          "when": "aep.authenticated",
          "icon": "$(search)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aep-container",
          "title": "AEP Agent",
          "icon": "$(robot)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "aep.morningBrief",
          "when": "view == aep.agentView",
          "group": "navigation"
        },
        {
          "command": "aep.openChat",
          "when": "view == aep.agentView", 
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "aep.openAgent",
          "when": "true"
        },
        {
          "command": "aep.morningBrief",
          "when": "aep.authenticated"
        },
        {
          "command": "aep.pickJiraTask", 
          "when": "aep.authenticated"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "AEP Agent Configuration",
      "properties": {
        "aep.coreApi": {
          "type": "string",
          "default": "http://localhost:8002",
          "description": "AEP Core API base URL"
        },
        "aep.realtimeApi": {
          "type": "string", 
          "default": "http://localhost:8001",
          "description": "AEP Realtime API base URL"
        },
        "aep.authFlow": {
          "type": "string",
          "enum": ["oauth-device", "api-key"],
          "default": "oauth-device",
          "description": "Authentication method"
        },
        "aep.autoGreeting": {
          "type": "boolean",
          "default": true,
          "description": "Show morning brief on startup"
        },
        "aep.jiraIntegration": {
          "type": "boolean", 
          "default": true,
          "description": "Enable Jira task integration"
        },
        "aep.confluenceIntegration": {
          "type": "boolean",
          "default": true, 
          "description": "Enable Confluence documentation integration"
        },
        "aep.slackIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable Slack thread integration"
        },
        "aep.teamsIntegration": {
          "type": "boolean",
          "default": false,
          "description": "Enable Microsoft Teams integration"
        },
        "aep.zoomIntegration": {
          "type": "boolean", 
          "default": false,
          "description": "Enable Zoom meeting integration"
        },
        "aep.model.planning": {
          "type": "string",
          "default": "claude-3-5-sonnet",
          "description": "Model for planning and analysis"
        },
        "aep.model.coding": {
          "type": "string",
          "default": "gpt-4-turbo",
          "description": "Model for code generation"
        },
        "aep.maxStepsPerPlan": {
          "type": "number",
          "default": 10,
          "description": "Maximum steps in a single plan"
        },
        "aep.requireApprovalForAll": {
          "type": "boolean", 
          "default": true,
          "description": "Require explicit approval for every action"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.19.21",
    "@types/vscode": "^1.84.0",
    "esbuild": "^0.25.0",
    "typescript": "^5.4.5",
    "@vscode/vsce": "^2.22.0"
  }
}
