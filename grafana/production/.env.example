# Grafana public URL + TLS
GRAFANA_DOMAIN=grafana.example.com
GRAFANA_ROOT_URL=https://grafana.example.com
GRAFANA_HTTP_PORT=3000

# Grafana admin user
GRAFANA_ADMIN_USER=admin

# Grafana internal database (external Postgres)
GRAFANA_DB_HOST=db.example.com:5432
GRAFANA_DB_NAME=grafana
GRAFANA_DB_USER=grafana

# NAVI metrics database for dashboards (external Postgres)
NAVI_DB_HOST=postgres.example.com:5432
NAVI_DB_NAME=mentor
NAVI_DB_USER=mentor

# Prometheus data source (managed or self-hosted)
PROMETHEUS_URL=https://prometheus.example.com

# Optional SSO (Generic OAuth)
GF_AUTH_GENERIC_OAUTH_ENABLED=false
GF_AUTH_GENERIC_OAUTH_NAME=SSO
GF_AUTH_GENERIC_OAUTH_CLIENT_ID=
GF_AUTH_GENERIC_OAUTH_CLIENT_SECRET=
GF_AUTH_GENERIC_OAUTH_AUTH_URL=
GF_AUTH_GENERIC_OAUTH_TOKEN_URL=
GF_AUTH_GENERIC_OAUTH_API_URL=
GF_AUTH_GENERIC_OAUTH_SCOPES=openid profile email
GF_AUTH_SIGNOUT_REDIRECT_URL=
