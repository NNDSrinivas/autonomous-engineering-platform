{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://navi.local/schemas/model-registry.schema.json",
  "title": "NAVI Model Registry",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "environment", "models"],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "minimum": 1
    },
    "environment": {
      "type": "string",
      "enum": ["dev", "staging", "prod"]
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "models": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/model" }
    }
  },
  "$defs": {
    "model": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "provider",
        "displayName",
        "enabled",
        "productionApproved",
        "capabilities",
        "pricing",
        "limits",
        "governance"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 3,
          "maxLength": 128,
          "pattern": "^[a-z0-9_-]+\\/[a-z0-9._-]+$"
        },
        "provider": {
          "type": "string",
          "enum": ["openai", "anthropic", "google", "groq", "azure-openai", "custom"]
        },
        "displayName": { "type": "string", "minLength": 1, "maxLength": 128 },
        "enabled": { "type": "boolean" },
        "productionApproved": { "type": "boolean" },
        "deprecation": {
          "type": "object",
          "additionalProperties": false,
          "required": ["status"],
          "properties": {
            "status": { "type": "string", "enum": ["active", "deprecated", "disabled"] },
            "sunsetAt": { "type": "string", "format": "date-time" },
            "replacementModelId": {
              "type": "string",
              "pattern": "^[a-z0-9_-]+\\/[a-z0-9._-]+$"
            }
          }
        },
        "capabilities": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "chat",
              "tool-use",
              "json",
              "vision",
              "code",
              "reasoning",
              "long-context",
              "streaming"
            ]
          },
          "uniqueItems": true
        },
        "pricing": {
          "type": "object",
          "additionalProperties": false,
          "required": ["currency", "inputPer1KTokens", "outputPer1KTokens"],
          "properties": {
            "currency": { "type": "string", "enum": ["USD"] },
            "inputPer1KTokens": { "type": "number", "minimum": 0 },
            "outputPer1KTokens": { "type": "number", "minimum": 0 }
          }
        },
        "limits": {
          "type": "object",
          "additionalProperties": false,
          "required": ["maxInputTokens", "maxOutputTokens"],
          "properties": {
            "maxInputTokens": { "type": "integer", "minimum": 256 },
            "maxOutputTokens": { "type": "integer", "minimum": 128 }
          }
        },
        "governance": {
          "type": "object",
          "additionalProperties": false,
          "required": ["tier", "allowedEnvironments"],
          "properties": {
            "tier": { "type": "string", "enum": ["premium", "standard", "budget"] },
            "allowedEnvironments": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "enum": ["dev", "staging", "prod"] },
              "uniqueItems": true
            },
            "tags": {
              "type": "array",
              "items": { "type": "string", "maxLength": 48 },
              "uniqueItems": true
            }
          }
        },
        "healthCheck": {
          "type": "object",
          "additionalProperties": false,
          "required": ["enabled"],
          "properties": {
            "enabled": { "type": "boolean" },
            "timeoutMs": { "type": "integer", "minimum": 100, "maximum": 20000 }
          }
        }
      }
    }
  }
}
